<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page name='login_history' string="Login History">
                        <field name="log_ids" widget="one2many_list" options="{'no_create': True}">
                            <tree editable="bottom">
                                <field name="create_date" invisible="1"/>
                                <field name="login_date"/>
                                <field name="location"/>
                                <field name="dimension"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="res_users_log_form_view" model="ir.ui.view">
            <field name="name">res.users.log.form.view</field>
            <field name="model">res.users.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date"/>
                                <field name="login_date"/>
                            </group>
                            <group>
                                <field name="location"/>
                                <field name="dimension"/>
                                <field name="url" widget="url"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
