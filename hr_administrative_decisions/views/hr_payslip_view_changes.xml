<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="admin_decision_view_hr_payslip_form_inherit" model="ir.ui.view">
           <field name="name">admin_decision.hr.payslip.form.inherit</field>
           <field name="model">hr.payslip</field>
           <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
           <field name="arch" type="xml">

               <xpath expr="//field[@name='line_ids']" position="before">
                   <group>
                       <group>
                           <field name="decision_payslip_increase" force_store="1"/>
                           <field name="decision_payslip_decrease"/>
                       </group>
                       <group>
                           <field name="full_wage" force_store="1"/>
                       </group>
                   </group>
               </xpath>

           </field>
       </record>

    </data>
</odoo>